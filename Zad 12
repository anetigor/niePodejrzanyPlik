/*Zad 5
void odwrocWyrazy(char *zdanie) {
    char *wyrazy[100];
    int licznik = 0;

    char *token = strtok(zdanie, " ");
    while (token != NULL) {
        wyrazy[licznik++] = token;
        token = strtok(NULL, " ");
    }

    printf("FUNKCJA â€“ odwrocone wyrazy:\n");
    for (int i = licznik - 1; i >= 0; i--) {
        printf("%s", wyrazy[i]);
        if (i > 0) printf(" ");
    }
    printf("\n");
}
*/
/* Zad 4
void kropkuj(char *s) {
    printf("kropkowanie\n");
    for (int i = 0; s[i]; i++)
        if (s[i] == ',') s[i] = '.';
}

void przecinkuj(char *s) {
    printf("przecinkowanie...\n");
    for (int i = 0; s[i]; i++)
        if (s[i] == '.') s[i] = ',';
}
*/

/*Zad3
void sortuj(char *s) {
    int n = strlen(s);
    for (int i = 0; i < n - 1; i++)
        for (int j = i + 1; j < n; j++)
            if (s[i] > s[j]) {
                char temp = s[i];
                s[i] = s[j];
                s[j] = temp;
            }
}

void sprawdzAnagram(char *a, char *b) {
    if (strlen(a) != strlen(b)) {
        printf("Nie ma anagramow, ale tez jest super :)");
        return;
    }

    char s1[100], s2[100];
    strcpy(s1, a);
    strcpy(s2, b);

    for (int i = 0; s1[i]; i++) s1[i] = tolower(s1[i]);
    for (int i = 0; s2[i]; i++) s2[i] = tolower(s2[i]);

    sortuj(s1);
    sortuj(s2);

    if (strcmp(s1, s2) == 0)
        printf("WOW \"%s\" i \"%s\" sa anagramami!\n", a, b);
    else
        printf("Nie ma anagramow, ale tez jest super :)", a, b);
}

*/
/* zad 2
void sprawdzPalindrom(char *s) {
    int i = 0, j = strlen(s) - 1;

    while (i < j) {
        if (tolower(s[i]) != tolower(s[j])) {
            printf("niestety \"%s\" nie jest palindromem, szukamy dalej.\n", s);
            return;
        }
        i++;
        j--;
    }
    printf("Nie do wiary! \"%s\" jest palindromem.\n", s);
}
*/
