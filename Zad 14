/* zad 6
struct osoba{
    char imie[15];
    char nazwisko[25];
};

void sortuj(struct osoba tab[], int n)
{
    int i,j;
    struct osoba temp;

    for(i=0;i<n-1;i++)
    {
        for(j=0;j<n-i-1;j++)
        {
            if(strcmp(tab[j].nazwisko, tab[j+1].nazwisko) > 0 ||
              (strcmp(tab[j].nazwisko, tab[j+1].nazwisko) == 0 &&
               strcmp(tab[j].imie, tab[j+1].imie) > 0))
            {
                temp = tab[j];
                tab[j] = tab[j+1];
                tab[j+1] = temp;
            }
        }
    }
}

