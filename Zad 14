/*zad 4
struct zespolona{
    double re;
    double im;
};

struct zespolona dodaj(struct zespolona a, struct zespolona b)
{
    struct zespolona wynik;
    wynik.re = a.re + b.re;
    wynik.im = a.im + b.im;
    return wynik;
}

struct zespolona odejmij(struct zespolona a, struct zespolona b)
{
    struct zespolona wynik;
    wynik.re = a.re - b.re;
    wynik.im = a.im - b.im;
    return wynik;
}

struct zespolona mnoz(struct zespolona a, struct zespolona b)
{
    struct zespolona wynik;
    wynik.re = a.re*b.re - a.im*b.im;
    wynik.im = a.re*b.im + a.im*b.re;
    return wynik;
}

struct zespolona dziel(struct zespolona a, struct zespolona b)
{
    struct zespolona wynik;
    double m = b.re*b.re + b.im*b.im;
    wynik.re = (a.re*b.re + a.im*b.im) / m;
    wynik.im = (a.im*b.re - a.re*b.im) / m;
    return wynik;
}

void wypisz(struct zespolona z)
{
    printf("%.2lf + %.2lfi\n", z.re, z.im);
}

*/




