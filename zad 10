/* ZAD 3
#include <stdio.h>

int najwieksza(int a, int b, int c) {
    int max = a;
    if(b > max) max = b;
    if(c > max) max = c;
    return max;
}

int main() {
    int x, y, z;
    printf("Podaj trzy liczby całkowite: ");
    scanf("%d %d %d", &x, &y, &z);
    printf("Największa liczba to: %d\n", najwieksza(x, y, z));
    return 0;
}
