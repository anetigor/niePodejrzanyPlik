/* ZAD 10

int reszta(int a, int b) {
    while(a >= b) {
        a -= b;
    }
    return a;
}

int main() {
    int a, b;
    printf("Podaj dwie liczby naturalne: ");
    scanf("%d %d", &a, &b);
    if(a > 0 && b > 0)
        printf("Reszta z dzielenia %d przez %d = %d\n", a, b, reszta(a, b));
    else
        printf("Obie liczby muszą być dodatnie!\n");
    return 0;
}
*/


/* Zad 9
double pierwiastek(double liczba, double dokladnosc) {
    double x = liczba; // początkowe przybliżenie
    while(x*x - liczba > dokladnosc || liczba - x*x > dokladnosc) {
        x = 0.5 * (x + liczba / x); // metoda Newtona
    }
    return x;
}

int main() {
    double n, eps;
    printf("Podaj liczbę i dokładność: ");
    scanf("%lf %lf", &n, &eps);
    if(n > 0 && eps > 0)
        printf("Pierwiastek kwadratowy = %.10lf\n", pierwiastek(n, eps));
    else
        printf("Błędne dane!\n");
    return 0;
}
*/



/* ZAD 8

double obliczPi(int n) {
    double pi = 0.0;
    for(int i = 0; i < n; i++) {
        pi += (i % 2 == 0 ? 1.0 : -1.0) / (2*i + 1);
    }
    return 4 * pi;
}

int main() {
    int n;
    printf("Podaj dokładność (liczbę iteracji): ");
    scanf("%d", &n);
    printf("Przybliżenie pi = %.10lf\n", obliczPi(n));
    return 0;
}
*/
/* ZAD 7
double poleOstroslupa(double a, double h) {
    double hsc = sqrt(h*h + (a*a)/4); // wysokość ściany bocznej
    return a*a + 2*a*hsc;
}

int main() {
    double a, h;
    printf("Podaj bok podstawy i wysokość ostrosłupa: ");
    scanf("%lf %lf", &a, &h);
    printf("Pole powierzchni ostrosłupa: %.2lf\n", poleOstroslupa(a, h));
    return 0;
}

*/
/*ZAD 6

double poleProstopadloscianu(double a, double b, double c) {
    return 2 * (a*b + a*c + b*c);
}

int main() {
    double a, b, c;
    printf("Podaj wymiary prostopadłościanu (a, b, c): ");
    scanf("%lf %lf %lf", &a, &b, &c);
    printf("Pole powierzchni: %.2lf\n", poleProstopadloscianu(a, b, c));
    return 0;
}
*/

/* ZAD 5
double sumaArytmetycznego(int n, double a1, double r) {
    return (n / 2.0) * (2 * a1 + (n - 1) * r);
}

double sumaGeometrycznego(int n, double a1, double q) {
    if(q == 1) return a1 * n;
    return a1 * (1 - pow(q, n)) / (1 - q);
}

int main() {
    int wybor, n;
    double a1, r;
    printf("Wybierz:\n1 - ciag arytmetyczny\n2 - ciag geometryczny\n");
    scanf("%d", &wybor);
    printf("Podaj a1 i r (różnicę lub iloraz) oraz liczbę wyrazów n: ");
    scanf("%lf %lf %d", &a1, &r, &n);

    if(wybor == 1)
        printf("Suma ciągu arytmetycznego = %.2lf\n", sumaArytmetycznego(n, a1, r));
    else if(wybor == 2)
        printf("Suma ciągu geometrycznego = %.2lf\n", sumaGeometrycznego(n, a1, r));
    else
        printf("Niepoprawny wybór!\n");

    return 0;
}
*/

