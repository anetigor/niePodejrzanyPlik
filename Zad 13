/* zad 6
#define N 5

void wypelnij(int m[N][N]) {
    for (int i = 0; i < N; i++)
        for (int j = 0; j < N; j++)
            m[i][j] = rand() % 20 + 6;
}

void print(int m[N][N]) {
    for (int i = 0; i < N; i++) {
        for (int j = 0; j < N; j++)
            printf("%3d ", m[i][j]);
        printf("\n");
    }
}

int roznic(int m[N][N]) {
    int d1 = 0, d2 = 0;
    for (int i = 0; i < N; i++) {
        d1 += m[i][i];
        d2 += m[i][N - 1 - i];
    }
    return d1 - d2;
}

*/
/*zad 5

#define N 4

void wypelnij(int m[N][N]) {
    for (int i = 0; i < N; i++)
        for (int j = 0; j < N; j++)
            m[i][j] = rand() % 41 - 20;
}

void wypisz(int m[N][N]) {
    for (int i = 0; i < N; i++) {
        for (int j = 0; j < N; j++)
            printf("%4d ", m[i][j]);
        printf("\n");
    }
}

void sumka(int m[N][N]) {
    printf("\nSumy wierszy:\n");
    for (int i = 0; i < N; i++) {
        int s = 0;
        for (int j = 0; j < N; j++)
            s += m[i][j];
        printf("Wiersz %d: %d\n", i, s);
    }

    printf("\nSumy kolumn:\n");
    for (int j = 0; j < N; j++) {
        int s = 0;
        for (int i = 0; i < N; i++)
            s += m[i][j];
        printf("Kolumna %d: %d\n", j, s);
    }
}
*/
/*Zad 4

#define N 4

void wypelnijja(int m[N][N]) {
    for (int i = 0; i < N; i++)
        for (int j = 0; j < N; j++)
            m[i][j] = rand() % 21 - 10;
}

void wypiszja(int m[N][N]) {
    for (int i = 0; i < N; i++) {
        for (int j = 0; j < N; j++)
            printf("%3d ", m[i][j]);
        printf("\n");
    }
}

void sortusortu(int m[N][N]) {
    int temp[16];
    int k = 0;

    for (int i = 0; i < N; i++)
        for (int j = 0; j < N; j++)
            temp[k++] = m[i][j];

    for (int i = 0; i < 16; i++)
        for (int j = i + 1; j < 16; j++)
            if (temp[j] < temp[i]) {
                int t = temp[i]; temp[i] = temp[j]; temp[j] = t;
            }

    k = 0;
    for (int i = 0; i < N; i++)
        for (int j = 0; j < N; j++)
            m[i][j] = temp[k++];
}
*/

/*Zad 3
#define R 3
#define C 4

void wypelnij(int m[R][C]) {
    for (int i = 0; i < R; i++)
        for (int j = 0; j < C; j++)
            m[i][j] = rand() % 11 - 5;
}

void wypisz(int m[R][C]) {
    for (int i = 0; i < R; i++) {
        for (int j = 0; j < C; j++)
            printf("%3d ", m[i][j]);
        printf("\n");
    }
}

void wyszuk(int m[R][C], int *min, int *max) {
    *min = *max = m[0][0];
    for (int i = 0; i < R; i++)
        for (int j = 0; j < C; j++) {
            if (m[i][j] < *min) *min = m[i][j];
            if (m[i][j] > *max) *max = m[i][j];
        }
}
*/
/* zad 2
#define ROW 4
#define COL 3

void wypelnijJa(double m[ROW][COL]) {
    for (int i = 0; i < ROW; i++)
        for (int j = 0; j < COL; j++)
            m[i][j] = (rand() % 2201 - 1100) / 100.0;  // zakres [-11, 11)
}

void wypiszJa(double m[ROW][COL]) {
    for (int i = 0; i < ROW; i++) {
        for (int j = 0; j < COL; j++)
            printf("%7.2lf ", m[i][j]);
        printf("\n");
    }
}

void Skalar(double m[ROW][COL], double s) {
    for (int i = 0; i < ROW; i++)
        for (int j = 0; j < COL; j++)
            m[i][j] *= s;
}
*/
