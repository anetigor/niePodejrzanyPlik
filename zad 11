/* zad 8
void wczytajTablice(int tab[], int n) {
    for (int i = 0; i < n; i++) {
        printf("Podaj element %d: ", i + 1);
        scanf("%d", &tab[i]);
    }
}


void wypiszTablice(int tab[], int n) {
    for (int i = 0; i < n; i++) {
        printf("%4d ", tab[i]);
    }
    printf("\n");
}


void odwrocTablice(int tab[], int n) {
    for (int i = 0; i < n / 2; i++) {
        int temp = tab[i];
        tab[i] = tab[n - 1 - i];
        tab[n - 1 - i] = temp;
    }
}

*/
/* zad 7
double horner(int wsp[], int stopien, double x) {
    double wynik = wsp[0];  
    for (int i = 1; i <= stopien; i++) {
        wynik = wynik * x + wsp[i];
    }
    return wynik;
}


void przetworzWielomian() {
    int wsp[4];  
    double x;

    printf("Podaj wspolczynniki wielomianu trzeciego stopnia (a0, a1, a2, a3):\n");
    for (int i = 0; i < 4; i++) {
        printf("a%d = ", i);
        scanf("%d", &wsp[i]);
    }

    printf("Podaj wartosc x: ");
    scanf("%lf", &x);

  
    double wynik = horner(wsp, 3, x);

   
    printf("\nWspolczynniki wielomianu:\n");
    for (int i = 0; i < 4; i++) {
        printf("a%d = %d\n", i, wsp[i]);
    }

    printf("\nDla x = %.2f, wartosc wielomianu wynosi: %.2f\n", x, wynik);
}

*/

/* Zad 6
double obliczOdchylenieStandardowe(int tab[], int n, double srednia) {
    double suma_kwadratow = 0.0;
    for (int i = 0; i < n; i++) {
        suma_kwadratow += pow(tab[i] - srednia, 2);
    }
    return sqrt(suma_kwadratow / n);
}

int znajdzMaksimum(int tab[], int n) {
    int max = tab[0];
    for (int i = 1; i < n; i++) {
        if (tab[i] > max)
            max = tab[i];
    }
    return max;
}


int znajdzMinimum(int tab[], int n) {
    int min = tab[0];
    for (int i = 1; i < n; i++) {
        if (tab[i] < min)
            min = tab[i];
    }
    return min;
}


void wypiszPozaZakresem(int tab[], int n, double srednia, double odchylenie) {
    double dolna_granica = srednia - odchylenie;
    double gorna_granica = srednia + odchylenie;

    printf("\nElementy mniejsze od (średnia - σ) i większe od (średnia + σ):\n");
    int znaleziono = 0;

    for (int i = 0; i < n; i++) {
        if (tab[i] < dolna_granica || tab[i] > gorna_granica) {
            printf("%4d ", tab[i]);
            znaleziono = 1;
        }
    }

    if (!znaleziono)
        printf("Brak takich elementów w tablicy.\n");
    else
        printf("\n");
}


void przetworzTablice(int n) {
    int tab[n];
    int suma = 0;

    srand(time(NULL));

    printf("Zawartość tablicy:\n");
    for (int i = 0; i < n; i++) {
        tab[i] = rand() % 201 - 100; 
        printf("%4d ", tab[i]);
        suma += tab[i];
    }

    double srednia = (double)suma / n;
    double odchylenie = obliczOdchylenieStandardowe(tab, n, srednia);
    int maksimum = znajdzMaksimum(tab, n);
    int minimum = znajdzMinimum(tab, n);

    printf("\nŚrednia z liczb w tablicy: %.2f", srednia);
    printf("\nOdchylenie standardowe: %.2f", odchylenie);
    printf("\nWartość maksymalna: %d", maksimum);
    printf("\nWartość minimalna: %d\n", minimum);

    // Wywołanie nowej funkcji
    wypiszPozaZakresem(tab, n, srednia, odchylenie);
}


*/

/* Zad 5
double obliczOdchylenieStandardowe(int tab[], int n, double srednia) {
    double suma_kwadratow = 0.0;
    for (int i = 0; i < n; i++) {
        suma_kwadratow += pow(tab[i] - srednia, 2);
    }
    return sqrt(suma_kwadratow / n);
}


int znajdzMaksimum(int tab[], int n) {
    int max = tab[0];
    for (int i = 1; i < n; i++) {
        if (tab[i] > max)
            max = tab[i];
    }
    return max;
}


int znajdzMinimum(int tab[], int n) {
    int min = tab[0];
    for (int i = 1; i < n; i++) {
        if (tab[i] < min)
            min = tab[i];
    }
    return min;
}


void przetworzTablice(int n) {
    int tab[n];
    int suma = 0;

    srand(time(NULL));

    printf("Zawartość tablicy:\n");
    for (int i = 0; i < n; i++) {
        tab[i] = rand() % 201 - 100; 
        printf("%4d ", tab[i]);
        suma += tab[i];
    }

    double srednia = (double)suma / n;
    double odchylenie = obliczOdchylenieStandardowe(tab, n, srednia);
    int maksimum = znajdzMaksimum(tab, n);
    int minimum = znajdzMinimum(tab, n);

    printf("\nŚrednia z liczb w tablicy: %.2f", srednia);
    printf("\nOdchylenie standardowe: %.2f", odchylenie);
    printf("\nWartość maksymalna: %d", maksimum);
    printf("\nWartość minimalna: %d\n", minimum);
}

