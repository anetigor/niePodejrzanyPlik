/* Zad 9
void wypelnijTablice(int tab[], int n) {
    for (int i = 0; i < n; i++) {
        tab[i] = rand() % 21; // losowanie od 0 do 20
    }
}

// Funkcja wypisująca zawartość tablicy
void wypiszTablice(int tab[], int n) {
    for (int i = 0; i < n; i++) {
        printf("%3d ", tab[i]);
    }
    printf("\n");
}

// Funkcja zamieniająca miejscami połówki tablicy
void zamienPolowki(int tab[], int n) {
    int polowa = n / 2;
    for (int i = 0; i < polowa; i++) {
        int temp = tab[i];
        tab[i] = tab[i + polowa];
        tab[i + polowa] = temp;
    }
}
