int main() {
    wyswietlEnum();
     przetworzTablice(30); 
     przetworzWielomian();

     const int n = 5;
    int tab[n];

    printf("Wczytaj %d liczb calkowitych:\n", n);
    wczytajTablice(tab, n);

    printf("\nZawartosc tablicy przed odwroceniem:\n");
    wypiszTablice(tab, n);

    odwrocTablice(tab, n);

    printf("\nZawartosc tablicy po odwroceniu:\n");
    wypiszTablice(tab, n);




       const int n = 10;
    int tab[n];

    srand(time(NULL)); // inicjalizacja generatora liczb losowych

    wypelnijTablice(tab, n);

    printf("Zawartosc tablicy przed zamiana:\n");
    wypiszTablice(tab, n);

    zamienPolowki(tab, n);

    printf("\nZawartosc tablicy po zamianie polowek:\n");
    wypiszTablice(tab, n);
    return 0;
}
